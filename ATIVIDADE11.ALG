Algoritmo "atividade11"

Var

   media, p1, p2, p3 : real

Inicio

      escreva("Digite a nota do aluno na prova 1: ")
      leia(p1)
      escreva("Digite a nota do aluno na prova 2: ")
      leia(p2)
      escreva("Digite a nota do aluno na prova 3: ")
      leia(p3)
      
      media <- ((p1+p2+p3 / 3))
      escreval("A média do aluno é: ", media)
      leia(media)


Fimalgoritmo